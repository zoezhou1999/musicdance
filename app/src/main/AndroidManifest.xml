<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.zhouyuhong.musicdance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="landscape"
        android:supportsRtl="true">
        <activity
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:name=".MainMenu"
            android:screenOrientation="landscape" />
        <activity
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:name=".SelectingMenu"
            android:screenOrientation="landscape"
            tools:ignore="DuplicateActivity" />
        <activity
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:name=".LearnNotes"
            android:screenOrientation="landscape" />
        <activity
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:name=".LearningEnd" android:screenOrientation="landscape"/>
        <activity
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:name=".LevelMap" android:screenOrientation="landscape"></activity>
        <meta-data
            android:name="design_width_in_dp"
            android:value="2560"/>
        <meta-data
            android:name="design_height_in_dp"
            android:value="1800"/>
    </application>

</manifest>